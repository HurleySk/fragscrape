# Decodo API Configuration
DECODO_API_URL=https://api.decodo.com/v1

# Authentication Method 1: API Key (Recommended)
# Get your API key from Decodo dashboard > Settings > API Keys
DECODO_API_KEY=your_api_key_here

# Authentication Method 2: Username/Password (Legacy)
# Only needed if not using API key
DECODO_USERNAME=your_username
DECODO_PASSWORD=your_password

# Decodo Proxy Configuration
DECODO_PROXY_ENDPOINT=gate.decodo.com
DECODO_PROXY_PORT=7000

# API Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_PATH=./data/fragscrape.db

# Logging
LOG_LEVEL=debug

# Log File Rotation
LOG_FILE_MAX_SIZE_MB=5         # Max size per log file (default: 5MB)
LOG_FILE_MAX_FILES=5           # Number of rotated files to keep (default: 5)

# Cleanup Configuration
LOG_RETENTION_DAYS=30          # Keep database request logs for 30 days (default: 30)
CLEANUP_INTERVAL_HOURS=24      # Run cleanup every 24 hours (default: 24)

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Sub-user Management
SUB_USER_TRAFFIC_LIMIT_GB=1
SUB_USER_WARNING_THRESHOLD_MB=900

# Browser Configuration
# Optional: Path to Chrome/Chromium executable
# Leave empty to use Puppeteer's bundled Chrome
# On ARM64 (Raspberry Pi): /usr/bin/chromium-browser
# On macOS: /Applications/Google Chrome.app/Contents/MacOS/Google Chrome
# BROWSER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Scraper Configuration
SCRAPER_BASE_URL=https://www.parfumo.com

# Cache Configuration
CACHE_PERFUME_DURATION_SECONDS=86400   # 24 hours (default: 86400)
CACHE_SEARCH_DURATION_SECONDS=3600     # 1 hour (default: 3600)